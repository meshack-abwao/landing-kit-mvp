# ===========================================
# LANDING KIT MVP - Backend Environment Variables
# ===========================================
# Copy this to .env and fill in your values
# NEVER commit .env to git!

# ===========================================
# SERVER CONFIG
# ===========================================
PORT=3000
NODE_ENV=production

# ===========================================
# DATABASE - Railway PostgreSQL
# ===========================================
# Get this from Railway dashboard after creating PostgreSQL service
DATABASE_URL=postgresql://username:password@host:port/database

# ===========================================
# JWT SECRET - Generate a random string!
# ===========================================
# Use: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=your-super-secret-jwt-key-change-this

# ===========================================
# CORS - Your Frontend URLs
# ===========================================
# Update these after deploying to Netlify
DASHBOARD_URL=https://your-dashboard.netlify.app
STORE_URL=https://your-store.netlify.app

# ===========================================
# GOOGLE SHEETS (Optional - for order backup)
# ===========================================
GOOGLE_SHEET_ID=your_spreadsheet_id
GOOGLE_SERVICE_ACCOUNT_EMAIL=your-service@project.iam.gserviceaccount.com
GOOGLE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYOUR_KEY\n-----END PRIVATE KEY-----\n"

# ===========================================
# WHATSAPP (Optional - for notifications)
# ===========================================
BUSINESS_WHATSAPP_NUMBER=254712345678

# ===========================================
# M-PESA (Optional - for STK push)
# ===========================================
MPESA_CONSUMER_KEY=your_consumer_key
MPESA_CONSUMER_SECRET=your_consumer_secret
MPESA_SHORTCODE=174379
MPESA_PASSKEY=your_passkey
MPESA_CALLBACK_URL=https://your-railway-url.up.railway.app/api/payments/callback
